<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:DisassemblerUI.ViewModels"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="600"
        x:Class="DisassemblerUI.Views.DisassemblerShellView"
        x:DataType="vm:DisassemblerShellViewModel"
        FontSize="12" FontFamily="Inter"
        Title="MyChip8 Disassembler"
        Width="1000" Height="600">
    <Grid RowDefinitions="Auto,Auto,*,Auto">

        <!-- Toolbar -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10" Background="#F0F0F0" Padding="10" Height="50">
            <TextBlock Text="File:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Bold"/>
            <TextBox Name="FileName" Width="400" VerticalAlignment="Center" Margin="0,0,10,0" Padding="5"
                     Text="{Binding FileName}"/>
            <Button Name="OnLoadFileButton" Content="Load ROM" Width="100" Padding="5,10" Margin="0,0,20,0"
                    Click="OnLoadFileButton_Click"/>

            <Rectangle Width="2" Fill="#CCCCCC" Margin="10,0"/>

            <TextBlock Text="Show Hex:" VerticalAlignment="Center" Margin="10,0,10,0" FontWeight="Bold"/>
            <CheckBox Name="ShowHex" VerticalAlignment="Center" Margin="0,0,20,0"
                      IsChecked="{Binding ShowHex}"/>
        </StackPanel>

        <!-- Instruction Grid -->
        <DataGrid x:Name="ProgramInstructions"
                  Grid.Row="2"
                  Margin="10"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserReorderColumns="False"
                  CanUserResizeColumns="True"
                  CanUserSortColumns="False"
                  GridLinesVisibility="All"
                  BorderThickness="1"
                  BorderBrush="#CCCCCC"
                  ItemsSource="{Binding ProgramInstructions}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Address" Binding="{Binding AddressDisplay}" Width="80" FontFamily="Consolas"/>
                <DataGridTextColumn Header="Operation" Binding="{Binding Operation}" Width="100"/>
                <DataGridTextColumn Header="Parameter 1" Binding="{Binding Parameter1}" Width="100"/>
                <DataGridTextColumn Header="Parameter 2" Binding="{Binding Parameter2}" Width="100"/>
                <DataGridTextColumn Header="Parameter 3" Binding="{Binding Parameter3}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="#F0F0F0" Padding="10,5">
            <TextBlock Name="StatusMessage" Text="{Binding StatusMessage}" Foreground="#333333"/>
        </Border>
    </Grid>
</Window>
